@model MemberUpdateViewModel
    <div class="container">
        <div class="row">
            <div style="padding: 30px;" class="adress-editing">
                <div style="padding: 30px; text-align:center" class="title">
                    <h1>Edit Profile</h1>
                </div>
                <div style="width: 100%;" class="adress-form">
                    <form asp-action="edit" method="post">
                        <div style="padding:15px" class="row">
                            <div class="form-group col-md-6">
                                <label asp-for="@Model.FullName">Full Name</label>
                                <input asp-for="@Model.FullName" type="text" class="form-control" id="firstname" placeholder="Full Name">
                                <span asp-validation-for="@Model.FullName"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="UserName" class="required">UserName</label>
                                <input asp-for="UserName" readonly id="current-pwd"class="form-control" placeholder="Current Password" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div style="padding:15px" class="row">
                            <div class="form-group col-md-6">
                                <label asp-for="@Model.Email">Email</label>
                                <input asp-for="@Model.Email" type="email" class="form-control" id="email" placeholder="Email">
                                <span asp-validation-for="@Model.Email"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="@Model.Phone">Phone Number</label>
                                <input asp-for="@Model.Phone" class="form-control" id="phone" placeholder="Phone Number">
                                <span asp-validation-for="@Model.Phone"></span>
                            </div>
                        </div>
                        <div style="padding:15px" class="row">
                            <div class="form-group col-md-4">
                                <label asp-for="@Model.Country">Country</label>
                                <select asp-for="@Model.Country" id="country" class="form-control">
                                    <option value="Azerbaijan">Azerbaijan</option>
                                    <option value="Russia">Russia</option>
                                    <option value="England">England</option>
                                </select>
                                <span asp-validation-for="@Model.Country"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="@Model.City">City</label>
                                <input asp-for="@Model.City" class="form-control" id="phone" placeholder="City">
                                <span asp-validation-for="@Model.City"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="@Model.Address">Street</label>
                                <input asp-for="@Model.Address" class="form-control" id="address" placeholder="Street">
                                <span asp-validation-for="@Model.Address"></span>
                            </div>
                        </div>
                        <div style="padding:15px" class="row">
                            
                            <div class="form-group col-md-4">
                                <label asp-for="CurrentPassword" class="required">Current Password</label>
                                <input asp-for="CurrentPassword" id="current-pwd" class="form-control" placeholder="Current Password" />
                                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-4">
                                <label asp-for="Password" class="required">New Password</label>
                                <input asp-for="Password" id="new-pwd" class="form-control" placeholder="New Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="ConfirmPassword" required">Confirm Password</label>
                                <input asp-for="ConfirmPassword" id="confirm-pwd"class="form-control" placeholder="Confirm Password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>
                </div>
            </div>

        </div>
    </div>