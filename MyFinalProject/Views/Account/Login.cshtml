    @model MemberLoginViewModel


    <main style="padding: 50px;">
        <!-- breadcrumb area start -->
        <div class="breadcrumb-area bg-img" data-bg="~/assets/img/banner/breadcrumb-banner.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="breadcrumb-wrap text-center">
                            <nav aria-label="breadcrumb">

                                <ul class="breadcrumb">
                                    <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">Home</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Logins</li>
                                </ul>

                            </nav>
                        </div>
                        <h1 class="title">Login</h1>

                    </div>
                </div>
            </div>
        </div>
        <!-- breadcrumb area end -->
        <!-- login register wrapper start -->
        <div class="login-register-wrapper section-padding">
            <div class="container">
                <div class="member-area-from-wrap">
                    <div class="row">
                        <!-- Login Content Start -->
                        <div class="col-lg-6">
                            <div class="login-reg-form-wrap">
                                <h2>Login</h2>
                                <form asp-action="login" method="post">
                                    <div class="single-input-item">
                                        <input asp-for="Username" placeholder="User Name" />
                                        <span asp-validation-for="Username"></span>
                                    </div>
                                    <div class="single-input-item">
                                        <input asp-for="Password" placeholder="Enter your Password" />
                                        <span asp-validation-for="Password"></span>
                                    </div>
                                    <div class="single-input-item">
                                        <div class="login-reg-form-meta d-flex align-items-center justify-content-between">
                                            <div class="remember-meta">
                                                <div class="custom-control d-flex custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input" id="rememberMe">
                                                    <label class="custom-control-label" for="rememberMe">Remember Me</label>
                                                </div>
                                            </div>
                                        </div>
                                        <a  style="color: blue;" asp-controller="account" asp-action="forgetpassword" class="forget-pwd">Forget Password?</a>

                                    </div>
                                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                    <div class="single-input-item">
                                        <button type="submit" class="btn">Login</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <!-- Login Content End -->
                        
                    </div>
                </div>
            </div>
        </div>
        <!-- login register wrapper end -->
    </main>
   