@model AboutViewModel
    <main style="padding: 50px;">
        <section id="about">
            <div class="container">
                <div class="col-lg-12">
                    <div style="background-color: white; text-align: center; padding: 30px 0;" class="content">
                        <div style="padding: 30px;" class="title">
                            <div class="h2">@Model.Settings["aboutTitle"]</div>
                        </div>
                        <div style="padding: 20px 70px; font-size: 20px;" class="text">
                            <p>
                                @Model.Settings["aboutDesc1"]
                            </p>
                            <p>
                                @Model.Settings["aboutDesc2"]
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section id="team">
            <div class="container">
                <div style="text-align: center;" class="team-content ">
                    <div class="team-title">
                        <h1>Meet Our Team</h1>
                    </div>
                    <div class="sub-title">
                        <p style="margin: 0;">Lorem ipsum dolor sit.</p>
                        <p>Lorem ipsum dolor sit amet consectetur, adipisicing elit.</p>
                    </div>
                </div>
                <div style="display: flex;" class="team-members ">
                    @foreach (var team in Model.OurTeams)
                    {
                    <div class="col-lg-4">
                        <div class="card">
                            <img class="card-img-top" src="~/upload/teams/@team.Image" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">@team.Name</h5>
                                <p class="card-text">@team.Position</p>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </section>
    </main>
   