@using MyFinalProject.Services
@model Contact
@inject LayoutService layoutservices
@{ 
    var settings = layoutservices.GetSettings();
}
<main style="margin: 30px;">
    <!-- breadcrumb area start -->
    <div class="breadcrumb-area bg-img">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-wrap text-center">
                        <nav aria-label="breadcrumb">
                            <h1 class="breadcrumb-title">Contact Us</h1>
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Contact Us</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="contactmap" style="padding-top: 50px;">
        <div class="map-wrapper">
            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d24305.76232914585!2d49.86419514999999!3d40.4039704!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2s!4v1639816553167!5m2!1sen!2s" width="100%" height="500" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </div>
    <!-- breadcrumb area end -->
    <!-- contact wrapper area start -->
    <div style="margin:15px" class="contact-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-5">
                    <div class="contact-info pt-0">
                        <h2 class="contact-title">Our Adress</h2>
                        <ul>
                            <li> Address : @settings["address"]</li>
                            <li>Email: @settings["mail"]</li>
                            <li>Phone Number: @settings["number"]</li>
                        </ul>
                        
                    </div>
                </div>
                <div class="col-lg-7">
                    <div style="padding:20px" class="contact-message">
                        <h2 class="contact-title">Leave Us A Message</h2>
                        <form asp-action="contact" method="post">
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Name">Name</label>
                                    <input asp-for="Name" type="text" class="form-control" id="Name" placeholder="Name" required>
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Email">Email</label>
                                    <input asp-for="Email" type="email" class="form-control" id="inputEmail4" placeholder="Email" required>
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Subject">Subject</label>
                                <input asp-for="Subject" type="text" class="form-control" id="subject" placeholder="Subject" required>
                                <span class="text-danger" asp-validation-for="Subject"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Message">Message</label>
                                <textarea asp-for="Message" placeholder="Message" name="message" class="form-control" required=""></textarea>
                                <span class="text-danger" asp-validation-for="Message"></span>
                            </div>
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <button type="submit" class="btn btn-primary">Sign in</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- contact wrapper area end -->
</main>
  