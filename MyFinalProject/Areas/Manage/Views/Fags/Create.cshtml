
@model Fags
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1>Create</h1>
            <form asp-action="create" method="post">
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <textarea asp-for="Title" placeholder="Title"  class="form-control" required=""></textarea>
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Information">Information</label>
                    <textarea asp-for="Information" placeholder="Information" class="form-control" required=""></textarea>
                    <span class="text-danger" asp-validation-for="Information"></span>
                </div>
                <div class="form-check col-lg-4">
                    <input class="form-check-input" type="checkbox" asp-for="isShipping">
                    <label class="form-check-label" asp-for="isShipping">
                        isShipping
                    </label>
                </div>
                <div class="form-check col-lg-4">
                    <input class="form-check-input" type="checkbox" asp-for="isPayment">
                    <label class="form-check-label" asp-for="isPayment">
                        isPayment
                    </label>
                </div>
                <div class="form-check col-lg-4">
                    <input class="form-check-input" type="checkbox" asp-for="isOrder">
                    <label class="form-check-label" asp-for="isOrder">
                        isOrder
                    </label>
                </div>
                <div asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>


