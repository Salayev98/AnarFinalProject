
@model Category
<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1>Edit</h1>

            <form asp-action="edit" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-check col-lg-4">
                    <input class="form-check-input" type="checkbox" asp-for="isPopular">
                    <label class="form-check-label" asp-for="isPopular">
                        IsPopular
                    </label>
                </div>
                @if (Model.isPopular)
                {
                    <div class="form-group col-lg-6">
                        <label asp-for="ImageFile">ImageFile</label>
                        <input class="form-control" asp-for="ImageFile" placeholder="Select image">
                        <span class="text-danger" asp-validation-for="ImageFile"></span>
                        <img style="width:100px" src="~/upload/category/@Model.Image" />
                    </div>
                }

                <button type="submit" class="btn btn-primary mb-2">Edit</button>
            </form>
        </div>

    </div>
</div>





