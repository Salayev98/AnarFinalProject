
@model ProductColor
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1>Create</h1>
            <form asp-action="create" method="post" enctype="multipart/form-data">
                
                <div class="form-row">
                    <div class="form-group col-lg-4">
                        <label asp-for="ProductId">Products</label>
                        <select class="form-control" asp-for="ProductId" asp-items="@new SelectList(ViewBag.Product,nameof(Product.Id),nameof(Product.Name))">
                        </select>
                    </div>
                    <div class="form-group col-lg-4">
                        <label asp-for="ColorId">Colors</label>
                        <select class="form-control" asp-for="ColorId" asp-items="@new SelectList(ViewBag.Color,nameof(Color.Id),nameof(Color.Name))">
                        </select>
                    </div>
                </div>
               
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

