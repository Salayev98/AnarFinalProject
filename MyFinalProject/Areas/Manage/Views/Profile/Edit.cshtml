@model ProfileUpdateViewModel

<div class="container">
    <h1>Edit</h1>
    <div class="row">
        <form asp-action="edit" method="post">
            <div class="row">
                <div class="form-group col-lg-6">
                    <label asp-for="FullName">FullName</label>
                    <input type="text" class="form-control" asp-for="FullName" placeholder="Enter FullName">
                    <span asp-validation-for="FullName"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Username">UserName</label>
                    <input type="text" class="form-control" asp-for="Username" placeholder="Enter UserName">
                    <span asp-validation-for="Username"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-lg-4">
                    <label asp-for="Country">Country</label>
                    <input type="text" class="form-control" asp-for="Country" placeholder="Enter Country">
                    <span asp-validation-for="Country"></span>
                </div>
                <div class="form-group col-lg-4">
                    <label asp-for="City">City</label>
                    <input type="text" class="form-control" asp-for="City" placeholder="Enter City">
                    <span asp-validation-for="City"></span>
                </div>
                <div class="form-group col-lg-4">
                    <label asp-for="Street">Street</label>
                    <input type="text" class="form-control" asp-for="Street" placeholder="Enter Street">
                    <span asp-validation-for="Street"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-6">
                    <label asp-for="Phone">Phone</label>
                    <input type="text" class="form-control" asp-for="Phone" placeholder="Enter Phone">
                    <span asp-validation-for="Phone"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Email">Email</label>
                    <input type="text" class="form-control" asp-for="Email" placeholder="Enter Email">
                    <span asp-validation-for="Email"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-lg-4">
                    <label asp-for="OldPassword">Password</label>
                    <input asp-for="OldPassword" type="text" class="form-control" placeholder="Enter OldPassword">
                    <span asp-validation-for="OldPassword"></span>
                </div>
                <div class="form-group col-lg-4">
                    <label asp-for="NewPassword">NewPassword</label>
                    <input asp-for="NewPassword" type="text" class="form-control" placeholder="Enter NewPassword">
                    <span asp-validation-for="NewPassword"></span>
                </div>
                <div class="form-group col-lg-4">
                    <label asp-for="ConfirmPassword">ConfirmPassword</label>
                    <input asp-for="ConfirmPassword" type="text" class="form-control" placeholder="Enter ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>